<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers2</span>
        </nav>
        <nav>
         <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <% if user_signed_in? %>
            <li class="">
              <%= link_to "Home","#", class:"home" %>
            </li>
            <li class="">
              <%= link_to "Users","#",class:"users" %>
            </li>
            <li class="">
              <%= link_to "Books","#",class:"books" %>
            </li>
            <li>
              <%= link_to "Log out","#",class:"logout" %>
            </li>
          <% else %>
            <li class="">
              <%= link_to "Home","#",class:"home" %>    <--! ログイン画面 -->
            </li>
            <li class="">
              <%= link_to "About","#", class:"about" %>
            </li>
            <li>
              <%= link_to "Sign up","#",class:"sign_up" %>
            </li>
            <li>
              <%= link_to "Log in","#",class:"sign_in" %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
